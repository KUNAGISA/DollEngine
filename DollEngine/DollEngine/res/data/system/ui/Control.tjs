
class Control extends Node
{
	function Control (par) 
	{
		super.Node(par);
		this.setAnchor(0.5,0.5);
		this._touch = new Touch();
		this.addCOM(this._touch);
		this.enabled = true;
		this._touch.onMouseDown = this.onMouseDown;
		this._touch.onMouseMove = this.onMouseMove;
		this._touch.onMouseUp = this.onMouseUp;
		this._touch.onClick = this.onClick;
		this._touch.enabled = true;
	}

	function onMouseDown (x,y) 
	{
	}

	function onMouseMove (x,y) 
	{
		// body...
	}

	function onMouseUp (x,y) 
	{
		// body...
	}

	function onClick (x,y) 
	{
		// body...
	}

	var _touch=void;
	property touch{
		getter {
	    	//getter
			return this._touch;
		}
	}

	property disabled{
	    setter(v) {
	    	//setter
	    	this._touch.enabled = !v;
		}
		getter {
	    	//getter
			return !this._touch.enabled;
		}
	}

	var _issystem=false;//是否是系统控件（不受er/cm指令清除
	property issystem{
	    setter(v) {
	    	//setter
	    	this._issystem = v;
		}
		getter {
	    	//getter
			return this._issystem;
		}
	}
}